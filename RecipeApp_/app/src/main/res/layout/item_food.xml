<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_1" />
        <TextView
            android:id="@+id/name_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name food"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_toRightOf="@+id/img_food"
            android:layout_toEndOf="@+id/img_food"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"></TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/img_food"
            android:layout_toEndOf="@+id/img_food"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/icon_clock"></ImageView>

        <TextView
            android:id="@+id/time_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/img_food"
            android:layout_toRightOf="@+id/img_food"
            android:fontFamily="sans-serif-black"
            android:text="Time cook"
            android:textColor="@color/grey"
            android:textSize="20sp"></TextView>
    </RelativeLayout>


</LinearLayout>