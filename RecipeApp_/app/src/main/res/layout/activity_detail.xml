<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FAF5F5">
    <Button
        android:id="@+id/btn_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="OK"
        ></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNguyenlieu"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:text="Nguyên liệu"
            android:textColor="@color/black"
            android:textSize="22sp"

            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="4dp" />

        <TextView
            android:id="@+id/txtNguyenlieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="...nguyen lieu ơ day"
            app:layout_constraintTop_toBottomOf="@+id/textNguyenlieu"
            tools:layout_editor_absoluteX="0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@id/textCongthuc"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Công thức"
            android:textColor="@color/black"
            android:textSize="22sp"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="82dp" />
        <TextView
            android:id="@+id/txtCongthuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="...cong thuc ơ day"
            app:layout_constraintTop_toBottomOf="@+id/textCongthuc"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>