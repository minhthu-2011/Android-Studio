<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/ar_txtFullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boder_bg"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="10dp"
        android:hint="Ho ten"
        android:textColor="@color/black"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/ar_txtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boder_bg"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:textColor="@color/black"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/ar_txtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boder_bg"
        android:drawableLeft="@drawable/icon_pass"
        android:drawablePadding="10dp"
        android:hint="Mật khẩu"
        android:textColor="@color/black"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/ar_txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boder_bg"
        android:drawableLeft="@drawable/icon_pass"
        android:drawablePadding="10dp"
        android:hint="Nhap lai mật khẩu"
        android:textColor="@color/black"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/grey" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp">

        <Button
            android:id="@+id/ar_btn_regiater_save"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button_bg"
            android:padding="10dp"
            android:text="Save" />

        <Button
            android:id="@+id/ar_btn_register_back"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_bg"
            android:padding="10dp"
            android:text="Back" />
    </LinearLayout>




</LinearLayout>